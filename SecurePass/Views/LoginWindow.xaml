<Window x:Class="SecureUstuj.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureUstuj - Login"
        Height="420"
        Width="360"
        WindowStartupLocation="CenterScreen"
        Background="#FF121212"
        ResizeMode="NoResize">

    <Border Background="#FF161616"
            Margin="28"
            Padding="22"
            BorderBrush="#FF222222"
            BorderThickness="1"
            CornerRadius="6">

        <StackPanel VerticalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,18">
                <TextBlock Text="SecureUstuj"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Your password manager"
                           FontSize="12"
                           Foreground="#FF8A8A8A"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Master Password"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="#FFB0B0B0"
                           Margin="0,0,0,6"/>

                <PasswordBox x:Name="PasswordBox"
                             Height="40"
                             FontSize="14"
                             Padding="12,8"
                             Background="#FF232323"
                             Foreground="White"
                             BorderBrush="#FF2F2F2F"
                             BorderThickness="1"
                             PasswordChar="●"/>
            </StackPanel>

            <Button x:Name="LoginButton"
                    Content="Login"
                    Height="38"
                    FontSize="14"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="0,6,0,0"
                    Click="LoginButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF2E2E2E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#FF3A3A3A"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF3A3A3A"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF444444"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Border x:Name="ErrorBorder"
                    Background="#22FF4A4A"
                    BorderBrush="#40FF5A5A"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0,12,0,0"
                    Visibility="Collapsed">
                <TextBlock x:Name="ErrorMessage"
                           FontSize="12"
                           Foreground="#FFFFB4B4"
                           TextWrapping="Wrap"/>
            </Border>

            <TextBlock Text="On first launch, the entered password will become the master password"
                       FontSize="11"
                       Foreground="#FF707070"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,14,0,0"/>
        </StackPanel>
    </Border>
</Window>
