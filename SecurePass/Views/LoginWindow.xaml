<Window x:Class="SecureUstuj.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureUstuj - Login" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF121212">

    <Border Background="#FF1E1E1E" 
            Margin="40"
            BorderBrush="#FF333333"
            BorderThickness="1"
            Padding="30">

        <StackPanel VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock Text="SecureUstuj" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Your password manager" 
                           FontSize="13" 
                           Foreground="#FFB0B0B0"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Master Password" 
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="#FFB0B0B0"
                           Margin="0,0,0,8"/>

                <PasswordBox x:Name="PasswordBox" 
                             Height="38" 
                             FontSize="14"
                             Padding="10"
                             Background="#FF2D2D2D"
                             Foreground="White"
                             BorderBrush="#FF444444"
                             PasswordChar="●"/>

                <Button x:Name="LoginButton" 
                        Content="Login"
                        Height="40"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#FFFFF176"
                        Foreground="#FF212121"
                        BorderThickness="0"
                        Margin="0,25,0,0"
                        Cursor="Hand"
                        Click="LoginButton_Click"/>
            </StackPanel>

            <Border x:Name="ErrorBorder" 
                    Background="#4DFF5252" 
                    Padding="12"
                    Margin="0,15,0,0"
                    Visibility="Collapsed">
                <TextBlock x:Name="ErrorMessage" 
                           FontSize="13"
                           Foreground="#FFFFCDD2"
                           TextWrapping="Wrap"/>
            </Border>

            <TextBlock Text="On first launch, the entered password will become the master password" 
                       FontSize="11" 
                       Foreground="#FF777777" 
                       TextWrapping="Wrap"
                       Margin="0,25,0,0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>