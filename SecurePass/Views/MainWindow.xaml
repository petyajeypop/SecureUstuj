<Window x:Class="SecureUstuj.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureUstuj" 
        Height="700" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FF121212">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <SolidColorBrush x:Key="BackgroundDark" Color="#FF121212"/>
        <SolidColorBrush x:Key="BackgroundCard" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="BackgroundHeader" Color="#FF2D2D2D"/>
        <SolidColorBrush x:Key="ButtonColor" Color="#FFE6B905"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0B0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#FF333333"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FFF44336"/>
        <SolidColorBrush x:Key="InfoColor" Color="#FF2196F3"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource ButtonColor}"/>
            <Setter Property="Foreground" Value="#FF000000"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource BackgroundHeader}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                            <GridViewRowPresenter Content="{TemplateBinding Content}"
                                          Columns="{TemplateBinding GridView.ColumnCollection}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="Bd" Value="#FF333333"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" TargetName="Bd" Value="#FF444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CategoryStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D3748"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundHeader}" 
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="SecureUstuj" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Password Manager" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBox Width="350" 
                             Height="32"
                             FontSize="13"
                             Padding="10"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Search" 
                            Width="80"
                            Height="32"
                            Margin="10,0,0,0"
                            Background="{StaticResource ButtonColor}"
                            Foreground="#FF000000"
                            BorderThickness="0"
                            Command="{Binding SearchEntriesCommand}"/>
                    <ComboBox Width="150"
                             Height="32"
                             Margin="10,0,0,0"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Foreground="#FF000000"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Refresh"
                            Command="{Binding LoadEntriesCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundCard}"
                    Padding="15"
                    Margin="0,0,0,15"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Add Password"
                            Background="#FFE6B905"
                            Foreground="#FF000000"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Width="120"
                            Command="{Binding AddEntryCommand}"/>

                    <Button Content="Edit"
                            Background="#FFE6B905"
                            Foreground="#FF000000"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Width="80"
                            Margin="10,0,0,0"
                            Command="{Binding EditEntryCommand}"/>

                    <Button Content="Delete"
                            Background="#FFE6B905"
                            Foreground="#FF000000"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Width="80"
                            Margin="10,0,0,0"
                            Command="{Binding DeleteEntryCommand}"/>

                    <Button Content="Generator"
                            Width="100"
                            Margin="20,0,0,0"
                            Background="#FFE6B905"
                            Foreground="#FF000000"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Command="{Binding TogglePasswordGeneratorCommand}"/>

                    <Button Content="Export CSV"
                            Width="100"
                            Margin="10,0,0,0"
                            Background="#FFE6B905"
                            Foreground="#FF000000"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Command="{Binding ExportToCsvCommand}"/>

                    <TextBlock VerticalAlignment="Center"
                               Margin="20,0,0,0"
                               FontSize="13"
                               Foreground="{StaticResource TextSecondary}"
                               Text="{Binding StatusMessage}"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1"
                    Background="#FF1E1E1E"
                    Padding="15"
                    Margin="0,0,0,15"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    Visibility="{Binding ShowPasswordGenerator, Converter={StaticResource BooleanToVisibilityConverter}}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Password Generator" 
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Length:" 
                                   Foreground="{StaticResource TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <TextBox Text="{Binding PasswordLength, UpdateSourceTrigger=PropertyChanged}"
                                 Width="50"
                                 TextAlignment="Center"/>

                        <TextBlock Text="(8-32)" 
                                   Foreground="#FF777777"
                                   VerticalAlignment="Center"
                                   Margin="5,0,20,0"/>

                        <CheckBox Content="A-Z"
                                  IsChecked="{Binding UseUppercase}"
                                  Foreground="{StaticResource TextSecondary}"
                                  Margin="0,0,10,0"/>

                        <CheckBox Content="0-9"
                                  IsChecked="{Binding UseDigits}"
                                  Foreground="{StaticResource TextSecondary}"
                                  Margin="0,0,10,0"/>

                        <CheckBox Content="!@#$%"
                                  IsChecked="{Binding UseSpecial}"
                                  Foreground="{StaticResource TextSecondary}"/>

                        <Button Content="Generate" 
                                Width="90"
                                Height="28"
                                Margin="20,0,10,0"
                                Background="#FFE6B905"
                                Foreground="#FF000000"
                                BorderThickness="0"
                                Command="{Binding GeneratePasswordCommand}"/>

                        <Button Content="Use" 
                                Width="70"
                                Height="28"
                                Background="#FFE6B905"
                                Foreground="#FF000000"
                                BorderThickness="0"
                                Command="{Binding UseGeneratedPasswordCommand}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBox Width="250"
                                 IsReadOnly="True"
                                 Background="#FF2D2D2D"
                                 Foreground="{StaticResource TextPrimary}"
                                 FontFamily="Consolas"
                                 Padding="10"
                                 Text="{Binding GeneratedPassword, UpdateSourceTrigger=PropertyChanged}"/>

                        <Button Content="Copy" 
                                Width="70"
                                Height="28"
                                Margin="10,0,0,0"
                                Background="#FFE6B905"
                                Foreground="#FF000000"
                                BorderThickness="0"
                                Command="{Binding CopyGeneratedPasswordCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="2" 
                    Background="{StaticResource BackgroundCard}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1">

                <ListView MouseDoubleClick="EntryItem_DoubleClick"
                          Background="Transparent"
                          BorderThickness="0"
                          ItemsSource="{Binding Entries}"
                          SelectedItem="{Binding SelectedEntry}">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="60" HeaderContainerStyle="{StaticResource HeaderStyle}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Id}" 
                                                   Padding="10,8"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   FontFamily="Consolas"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Name" Width="220" HeaderContainerStyle="{StaticResource HeaderStyle}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" 
                                                   Padding="10,8"
                                                   FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Login" Width="200" HeaderContainerStyle="{StaticResource HeaderStyle}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Username}" 
                                                   Padding="10,8"
                                                   Foreground="{StaticResource TextPrimary}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Category" Width="150" HeaderContainerStyle="{StaticResource HeaderStyle}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CategoryStyle}" Margin="10,5">
                                            <TextBlock Text="{Binding Category}" 
                                                       HorizontalAlignment="Center"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       FontSize="11"
                                                       FontWeight="Medium"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Created" Width="140" HeaderContainerStyle="{StaticResource HeaderStyle}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CreatedDate, StringFormat=dd.MM.yyyy HH:mm}" 
                                                   Padding="10,8"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   FontSize="12"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource ListViewItemStyle}"/>
                    </ListView.ItemContainerStyle>

                    <ListView.ContextMenu>
                        <ContextMenu Background="#FF2D2D2D" BorderBrush="#FF444444" BorderThickness="1">
                            <MenuItem Header="Copy Login" 
                                      Command="{Binding CopyLoginCommand}">
                                <MenuItem.Icon>
                                    <TextBlock Text="📋" FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem Header="Copy Password" 
                                      Command="{Binding CopyPasswordCommand}">
                                <MenuItem.Icon>
                                    <TextBlock Text="🔑" FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>

                            <Separator/>

                            <MenuItem Header="Show Details" 
                                      Command="{Binding ShowEntryDetailsCommand}">
                                <MenuItem.Icon>
                                    <TextBlock Text="👁️" FontSize="14"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
            </Border>
        </Grid>

        <Border Grid.Row="2" 
                Background="{StaticResource BackgroundHeader}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondary}"/>

                <TextBlock Grid.Column="1" 
                           Text="SecureUstuj v1.0"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>