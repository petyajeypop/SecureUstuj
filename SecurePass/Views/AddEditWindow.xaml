<Window x:Class="SecureUstuj.Views.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Password" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#FF121212">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <SolidColorBrush x:Key="BackgroundCard" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0B0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#FF333333"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FFFFF176"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="InfoColor" Color="#FF2196F3"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FFF44336"/>
        <SolidColorBrush x:Key="PurpleColor" Color="#FF9C27B0"/>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Border Background="#FF1E1E1E" 
            Margin="20"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            Padding="25">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Add/Edit Password" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Enter password details"
                           Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Name *"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" MaxLength="100"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Login/Username *"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" MaxLength="100"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Password *"/>
                        <TextBlock Text=" (click Generate or Advanced)" Foreground="#FF64B5F6" Margin="5,0,0,0"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Consolas"
                                 VerticalContentAlignment="Center"/>

                        <Button Grid.Column="1" 
                                Content="Generate" 
                                Margin="10,0,5,0" 
                                Width="90" 
                                Background="{StaticResource PrimaryColor}" 
                                BorderThickness="0" 
                                Command="{Binding GeneratePasswordCommand}"/>

                        <Button Grid.Column="2" 
                                Content="Copy" 
                                Width="70" 
                                Margin="5,0,5,0"
                                Background="{StaticResource InfoColor}" 
                                BorderThickness="0" 
                                Command="{Binding CopyPasswordCommand}"/>

                        <Button Grid.Column="3" 
                                Content="Advanced" 
                                Width="90" 
                                Background="{StaticResource PurpleColor}" 
                                Foreground="White"
                                BorderThickness="0" 
                                Command="{Binding OpenAdvancedGeneratorCommand}"/>
                    </Grid>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Category"/>
                    <ComboBox ItemsSource="{Binding Categories}" 
                              SelectedItem="{Binding SelectedCategory}"
                              IsEditable="True"/>
                </StackPanel>

                <Border Background="#4DFF5252" 
                        CornerRadius="4" 
                        Padding="12" 
                        Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#FFFFCDD2" 
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button Content="Cancel" 
                        Width="100" 
                        Background="Transparent" 
                        BorderBrush="{StaticResource BorderColor}" 
                        Command="{Binding CancelCommand}"/>

                <Button Content="Save" 
                        Width="100" 
                        Margin="10,0,0,0"
                        Background="{StaticResource SuccessColor}" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Command="{Binding SaveCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>