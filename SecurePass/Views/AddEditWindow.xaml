<Window x:Class="SecureUstuj.Views.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Password" 
        Height="700" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#FF121212"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <SolidColorBrush x:Key="BackgroundDark" Color="#FF121212"/>
        <SolidColorBrush x:Key="BackgroundCard" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="BackgroundHeader" Color="#FF1A1A1A"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#FF2E2E2E"/>
        <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#FF3A3A3A"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0B0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#FF4CAF50"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonBackgroundHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Border Background="#FF161616"
            Margin="30"
            Padding="30"
            BorderBrush="#FF222222"
            BorderThickness="1"
            CornerRadius="6">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Add/Edit Password" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Enter password details"
                           Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Name *"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" MaxLength="100"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Login/Username *"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" MaxLength="100"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Password *"/>
                        <TextBlock Text=" (click Generate or Advanced)" Foreground="#FF64B5F6" Margin="5,0,0,0"/>
                    </StackPanel>

                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                             FontFamily="Consolas"
                             VerticalContentAlignment="Center"
                             Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="Generate" Width="110" Command="{Binding GeneratePasswordCommand}"/>
                        <Button Content="Copy" Width="90" Margin="10,0,0,0" Command="{Binding CopyPasswordCommand}"/>
                        <Button Content="Advanced" Width="110" Margin="10,0,0,0" Command="{Binding OpenAdvancedGeneratorCommand}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Category"/>
                    <ComboBox ItemsSource="{Binding Categories}" 
                              SelectedItem="{Binding SelectedCategory}"
                              IsEditable="True"
                              Background="White"
                              Foreground="Black"
                              BorderBrush="#FF2A2A2A"
                              BorderThickness="1"
                              Height="36"
                              Padding="8,4"
                              FontSize="14">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FFD0D0D0"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>


                <Border Background="#4DFF5252" 
                        CornerRadius="4" 
                        Padding="12" 
                        Margin="0,10,0,0"
                        Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#FFFFCDD2" 
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,25,0,0">
                <Button Content="Cancel" Width="120" Command="{Binding CancelCommand}"/>
                <Button Content="Save" Width="120" Margin="15,0,0,0" Background="#FF4CAF50" Foreground="White" Command="{Binding SaveCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
