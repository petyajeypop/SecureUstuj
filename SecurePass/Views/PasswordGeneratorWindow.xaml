<Window x:Class="SecureUstuj.Views.PasswordGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Generator" 
        Height="600"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF121212"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundCard" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0B0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#FF333333"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="InfoColor" Color="#FF2196F3"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF1976D2"/>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1F1F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundCard}" 
            CornerRadius="8" 
            Margin="20"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            Padding="25">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Password Generator" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Generate strong passwords" 
                           Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Password Length" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="LengthTextBox" Text="12" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="(8-32 characters)" Foreground="#FF777777" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Character Types" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="UppercaseCheckBox" Content="Uppercase (A-Z)" IsChecked="True"/>
                        <CheckBox x:Name="DigitsCheckBox" Content="Digits (0-9)" IsChecked="True"/>
                        <CheckBox x:Name="SpecialCheckBox" Content="Special (!@#$%)" IsChecked="True"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Generated Password" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="GeneratedPasswordBox" IsReadOnly="True" FontFamily="Consolas" FontSize="14"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button x:Name="GenerateButton" Content="Generate"/>
                        <Button x:Name="CopyButton" Content="Copy" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="CancelButton" Content="Cancel" Width="140" Height="40"/>
                <Button x:Name="UseButton" Content="Use Password" Width="160" Height="40" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
