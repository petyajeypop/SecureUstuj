<Window x:Class="SecureUstuj.Views.PasswordGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Generator" 
        Height="350" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF121212"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundCard" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0B0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#FF333333"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF1976D2"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="InfoColor" Color="#FF2196F3"/>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Border Background="#FF1E1E1E" 
            CornerRadius="8" 
            Margin="20"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            Padding="25">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Password Generator" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Generate strong passwords" 
                           Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Password Length" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="LengthTextBox" 
                                 Text="12"
                                 Width="60"
                                 TextAlignment="Center"/>

                        <TextBlock Text="(8-32 characters)" 
                                   Foreground="#FF777777"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="Character Types" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="UppercaseCheckBox" 
                                  Content="Uppercase (A-Z)"
                                  IsChecked="True"/>

                        <CheckBox x:Name="DigitsCheckBox" 
                                  Content="Digits (0-9)"
                                  IsChecked="True"/>

                        <CheckBox x:Name="SpecialCheckBox" 
                                  Content="Special (!@#$%)"
                                  IsChecked="True"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Generated Password" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="GeneratedPasswordBox" 
                                 Grid.Column="0"
                                 IsReadOnly="True"
                                 FontFamily="Consolas"
                                 FontSize="14"/>

                        <Button x:Name="GenerateButton" 
                                Grid.Column="1"
                                Content="Generate"
                                Width="90"
                                Margin="10,0,5,0"
                                Background="{StaticResource PrimaryColor}"
                                Foreground="White"/>

                        <Button x:Name="CopyButton" 
                                Grid.Column="2"
                                Content="Copy"
                                Width="70"
                                Background="{StaticResource InfoColor}"
                                Foreground="White"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="3">
                    <TextBlock Text="Password Strength" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,8"/>

                    <Border Background="#FF2D2D2D" 
                            CornerRadius="4"
                            Height="10"
                            Margin="0,0,0,5">
                        <Border x:Name="StrengthIndicator" 
                                Background="#FF4CAF50"
                                CornerRadius="4"
                                Width="0"
                                HorizontalAlignment="Left"/>
                    </Border>

                    <TextBlock x:Name="StrengthText" 
                               Text="Strong"
                               Foreground="#FF4CAF50"
                               FontSize="12"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button x:Name="CancelButton" 
                        Content="Cancel"
                        Width="100"
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"/>

                <Button x:Name="UseButton" 
                        Content="Use Password"
                        Width="120"
                        Margin="10,0,0,0"
                        Background="{StaticResource SuccessColor}"
                        Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>